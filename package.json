  "dependencies": {
    "concurrently": "^8.0.1",
    "formik": "^2.2.9",
    "notiflix": "^3.2.6",
    "react-icons": "^4.8.0",
    "react-modal": "^3.16.1",
    "react-responsive": "^9.0.2",
    "react-router-dom": "^6.11.1",
    "react-select": "^5.7.3",
    "yup": "^1.1.1"
  }
}
